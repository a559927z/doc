CREATE TABLE PUB_USER_INFO(
    USER_ID VARCHAR(32) NOT NULL   COMMENT '用户ID' ,
    USER_NAME VARCHAR(20)    COMMENT '用户名' ,
    PASSWORD VARCHAR(255)    COMMENT '密码' ,
    STATE INT(1)    COMMENT '状态 0正常1冻结' ,
    CREATE_BY VARCHAR(32)    COMMENT '创建人' ,
    CREATE_DATE DATETIME    COMMENT '创建时间' ,
    UPDATE_BY VARCHAR(32)    COMMENT '修改人' ,
    UPDATE_DATE DATETIME    COMMENT '修改时间' ,
    REVISION INT(10)    COMMENT '乐观锁' ,
    PRIMARY KEY (USER_ID)
) COMMENT = '平台用户表 ';/*SQL@Run*/


CREATE TABLE RBAC_GLOBLE_RESOURCE(
    RESOURCE_ID VARCHAR(32) NOT NULL   COMMENT '资源ID' ,
    RESOURCE_PID VARCHAR(32)    COMMENT '资源上级ID' ,
    RESOURCE_URL VARCHAR(100)    COMMENT '资源Url' ,
    RESOURCE_NAME VARCHAR(50)    COMMENT '资源名称' ,
    RESOURCE_TYPE VARCHAR(10)    COMMENT '资源类型 1一级菜单 2二级菜单 3三级菜单' ,
    RESOURCE_SORT INT(10)    COMMENT '排序' ,
    CREATE_BY VARCHAR(32)    COMMENT '创建人' ,
    CREATE_DATE DATETIME    COMMENT '创建时间' ,
    UPDATE_BY VARCHAR(32)    COMMENT '修改人' ,
    UPDATE_DATE DATETIME    COMMENT '修改时间' ,
    REVISION INT(10)    COMMENT '乐观锁' ,
    PRIMARY KEY (RESOURCE_ID)
) COMMENT = '全局资源表 ';/*SQL@Run*/

CREATE TABLE RBAC_RESOURCE(
    RESOURCE_ID VARCHAR(32) NOT NULL   COMMENT '资源ID' ,
    RESOURCE_PID VARCHAR(32)    COMMENT '资源上级ID' ,
    RESOURCE_URL VARCHAR(100)    COMMENT '资源Url' ,
