    RESOURCE_TYPE VARCHAR(20)    COMMENT '资源类型 1一级菜单 2二级菜单 3三级菜单' ,
    RESOURCE_SORT INT(10)    COMMENT '排序' ,
    TENANT_ID VARCHAR(32)    COMMENT '租户ID' ,
