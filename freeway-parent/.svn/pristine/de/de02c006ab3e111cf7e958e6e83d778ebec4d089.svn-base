    CREATE_DATE DATETIME    COMMENT '创建时间' ,
    UPDATE_BY VARCHAR(32)    COMMENT '修改人' ,
    UPDATE_DATE DATETIME    COMMENT '修改时间' ,
    REVISION INT(10)    COMMENT '乐观锁' ,
    PRIMARY KEY (RESOURCE_ID)
) COMMENT = '资源表 ';/*SQL@Run*/

