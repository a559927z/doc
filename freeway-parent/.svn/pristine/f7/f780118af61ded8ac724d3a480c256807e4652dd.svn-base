@import '~antd/lib/style/themes/default.less';
@import '~@/utils/utils.less';
.itemBox {
  .itemTitle {
    width: 100%;
    button {
      width: 100%;
      color: #FD6720;
      margin-bottom: 42px;
    }
  }
  .phoneTip {
    font-size: 12px;
    color: #7d8292;
    line-height: 36px;
  }
  .showItem {
    margin-bottom: 24px;
    :global(.ant-col-5) {
      width: 10.333333%;
      text-align: right;
      color: rgba(0, 0, 0, 0.85);
      padding: 0 4px 0 2px !important;
    }
    :global(.ant-col-16) {
      width: 91.9%;
      padding: 0 !important;
    }
  }
  :global(.ant-input-number) {
    width: 100%;
  } // 头像
  :global(.ant-upload) {
    padding: 0 !important;
  }
  .headLogo {
    display: inline-block;
    width: 102px;
    height: 102px;
  } // 富文本
  .areaItem {
    :global(.ant-form-item-label) {
      width: 10.333333%;
    }
  } // 日期选择
  :global(.ant-calendar-picker) {
    width: 100%;
  }
  .company {
    position: absolute;
    right: -23px;
    display: inline-block;
  }
  .onlineReport {
    .reportIcon {
      width: 100px;
      position: absolute;
      top: 3px;
      left: 93%;
    }
    :global(.ant-btn) {
      color: @primary-color;
      border: none !important;
      padding: 0;
      span {
        margin-left: 0 !important;
      }
    }
  } // 保存
  .action {
    margin-left: 10.333333%;
    :global(.ant-btn) {
      margin-left: 0 !important;
    }
    .addBtn {
      margin-right: 15px;
    }
  }
  .errAlert {
    margin: 50px 10.333333%;
    a {
      font-size: 12px;
      color: #4a90e2;
      text-decoration: underline;
    }
  }
  .itemContent {
    background: #fafafa;
    border: 1px solid #ccd2e7;
    border-radius: 2px;
    position: relative;
    margin-bottom: 10px;
    padding: 20px 120px 20px 20px;
    .delIcon {
      color: #FD6720;
      border-color: #FD6720;
      cursor: pointer;
      position: absolute;
      right: 36px;
      bottom: 20px;
    }
    :global {
      .ant-form-item {
        margin-bottom: 0;
      }
    }
  }
  .inputTag {
    background: #fff;
    border-style: dashed;
  }
  .yesTag {
    height: 36px;
    line-height: 36px;
    text-align: center;
  }
}
