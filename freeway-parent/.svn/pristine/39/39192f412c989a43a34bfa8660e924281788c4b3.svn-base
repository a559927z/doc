@import "~antd/lib/style/themes/default.less";
@import '~@/utils/utils.less';
.itemBox{
  padding-bottom: 15px;
  margin-bottom: 15px;
  .itemTitle{
    margin-bottom: 10px;
  }
  .phoneTip{
    font-size: 12px;
    color: #7D8292;
    line-height: 36px;
  }
  .showItem{
      margin-bottom: 24px;
     :global(.ant-col-5){
      width: 10.333333%;
      text-align: right;
      color: rgba(0, 0, 0, 0.85);
      padding: 0 4px 0 2px!important;
    }
    :global(.ant-col-16){
      width: 91.9%;
      padding: 0!important;
    }
  }
  :global(.ant-form-item-with-help){
    margin-bottom: 19px!important;
  }
  :global(.ant-input-number){
    width: 100%;
  }
  // 头像
  :global(.ant-upload){
    padding: 0!important;
  }
  .headLogo{
    display: inline-block;
    width: 102px;
    height: 102px;
  }
  // 富文本
  .areaItem{
    :global{
      .ant-form-item-label{
        width: 12.333333%;
      }
      .ant-form-item-control-wrapper{
        width: 81.333333%;
      }
    }
  }
  :global(.ant-form-item-label label){
    display: inline-block;
    width: 100%;
    .textOverflow();
  }
  // 日期选择
  :global(.ant-calendar-picker) {
    width: 100%;
  }
  .company{
    position: absolute;
    right: -23px;
    display: inline-block;
  }
  .onlineReport{
    .reportIcon{
      width: 100px;
      position: absolute;
      top: 3px;
      left: 94%;
      font-size: 12px;
    }
    :global(.ant-btn){
      color: @primary-color;
      border:none!important;
      padding: 0;
      font-size: 12px;
      span{
        margin-left:0!important;
      }
    }
    .delIcon{
      margin-left: 10px;
    }
  }
  // 保存
  .action{
    margin-left: 12.333333%;
    :global(.ant-btn){
      padding:0 30px;
      margin-left: 0!important;
      margin-right: 10px!important
    }
    .addBtn{
      margin-right: 15px;
    }
  }
  .errAlert{
    margin:50px 10.333333%;
    a{
      font-size: 12px;
      color: #4A90E2;
      text-decoration: underline;
    }
  }
  .itemContent{
    background: #FAFAFA;
    border: 1px solid #CCD2E7;
    border-radius: 2px;
    padding:20px 35px 0;
    margin-bottom: 10px;
    position: relative;
    .delIcon{
      padding-right: 0!important;
      text-align: right;
      :global(.ant-btn){
        font-size: 12px;
        height: 28px;
        padding: 0 8px;
        border-radius: 2px;
        color: @primary-color;
        border-color: @primary-color;
      }
    }
  }
  .addItem{
    font-size: 12px;
    // background: #FAFAFA;
    border: 1px solid #CCD2E7;
    border-radius: 2px;
    text-align: center;
    color: @primary-color;
    padding: 10px 0;
    cursor: pointer;
  }
  .recordareaItem{
    :global(.ant-form-item-label){
      width: 8.33333%;
    }
  }
  .resumeareaItem{
    :global(.ant-form-item-label){
      width: 10.33333%;
    }
  }
  .timePicker{
    width: 130px;
    display: inline-block;
  }
  .mark{
    display: inline-block;
    line-height: 32px;
    height: 32px;
    padding: 0 5px;
  }
  .recorddelIcon{
    position: absolute;
    display: inline-block;
    right: 10px;
    bottom: 30px;
  }
  .recordAction{
    margin: 20px 0;
    :global(.ant-btn){
      padding:0 30px;
      margin-left: 0!important;
      margin-right: 10px!important;
    }
  }
}
