.bar {
  display: flex;
  justify-content: space-between;
  padding: 6px 0 10px;
  border-top: 1px solid #e9e9e9;
}

.dropdown {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
  width: 200px;
  background: #fff;
  border: 1px solid #ccc;
  padding: 4px;
  border-radius: 4px;
}

:global {
  .ant-select-selection.ant-select-selection--multiple {
    height: 30px;
    overflow: hidden;
  }
  .ant-table table {
    table-layout: fixed;
  }
  .ant-table-thead > tr > th, .ant-table-tbody > tr > td {
    word-break: break-all;
  }
  .ant-table-pagination.ant-pagination {
    margin-right: 20px;
  }
}

.orderBy {
  position: relative;
  padding-right: 16px;
  cursor: pointer;
  :global {
    .anticon-caret-up,.anticon-caret-down{
      font-size: 12px;
      position: absolute;
      right: 0;
      color: #9B9B9B;
    }
    .anticon-caret-up {
      top: 0;
    }
    .anticon-caret-down {
      bottom: 0;
    }
  }
}
